<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/text_repertuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wybierz film"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>


    <LinearLayout
        android:id="@+id/movies_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/text_repertuar"
        android:orientation="vertical" />
    <EditText
        android:id="@+id/editText_movie_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wpisz rodzaj biletu"
        android:textSize="20sp"
        android:layout_below="@id/movies_layout"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="40dp"
        android:inputType="text"/>
    <Button
        android:id="@+id/button_choose_movie"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Wybierz film"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:layout_below="@id/editText_movie_input"/>
</RelativeLayout>
