<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmenthomepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <Button
        android:id="@+id/button_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="25dp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-122dp">



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Cinema Logo"
            android:src="@drawable/logo" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Aurora Cinema"
            android:textColor="@android:color/white"
            android:textSize="40sp" />
        <Button
            android:id="@+id/button_repertuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repertuar"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"/>
        <Button
            android:id="@+id/button_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oferta"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_regulamin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="Regulamin"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_kontakt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="Kontakt"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingBottom="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
