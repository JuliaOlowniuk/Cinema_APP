<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <Button
        android:id="@+id/buttonDalej"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dalej"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"/>
    <Button
        android:id="@+id/buttonRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odśwież"
        android:layout_toStartOf="@id/buttonDalej"
        android:layout_alignBaseline="@id/buttonDalej"
        android:layout_marginEnd="8dp"/>
    <EditText
        android:id="@+id/place_textinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wybierz miejsce"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="40dp"
        android:inputType="text"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="760dp"
        android:layout_height="804dp"
        android:layout_below="@id/buttonDalej"
        android:orientation="vertical">

        <TextView
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"
            android:padding="40dp"
            android:text="Ekran"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="10"
            android:orientation="horizontal"
            android:rowCount="8"></GridLayout>
    </LinearLayout>

</RelativeLayout>
